}

.header-avatar-image {
  max-width: 80rpx;
  max-height: 80rpx;
  border-radius: 100%;
  object-fit: cover;
  margin-right: 22rpx;
}

.header-avater-label {
  font-size: 36rpx;
}

.editor {
  display: flex;
  align-items: center;
  width: 128rpx;
  color: #fff;
  font-size: 25rpx;
  border-radius: 5rpx;
  z-index: 99;
  background: rgba(0, 0, 0, 0.3);
}

