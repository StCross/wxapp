  height: 12rpx;
  margin: auto;
  border: 6rpx solid #98B925;
  border-radius: 50%;
}


.left-view {
  display: flex;
  align-items: center;
  height: auto;
  padding: 20rpx;
  background: #fff;
  margin-bottom: 16rpx;
  border-radius: 6rpx;
  box-shadow: 0px 2px 2px #c9c9c9;
}
.bgcolor{
  background-color: #99A0D4;
}
.addleft{
  padding-left: 18rpx;
  border-right: none;
}
.bgcolor .title, .bgcolor .record-time{
  color: #fff;
}
.personEvent{
  /* width: 100%; */
  padding-left: 26rpx;
  margin-top:0!important;
}
.mEvents{
  padding-left: 46rpx;
}

.personDate{
  position: relative;
  height: 100%;
}
.dateBox{
  height: 80rpx;
  padding-right: 18rpx;
  margin-top: 10rpx;
  border-right: 2rpx solid #98B925;
}

.eventsadd {
  width: 40rpx;
  height: 40rpx;
}
.eventsadd image{
  display: block;
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.personDate .year{
  color: #ACACAC;
  font-size: 28rpx;
}
.personDate .hideing{
  color: #fff;
  font-size: 28rpx;
}
.personDate .birth{
  text-align: center;
  color: #98B925;
  font-size: 32rpx;
  margin-top:0!important;
}
.personDate .personage{
    font-size: 40rpx;
}

.title {
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  white-space: nowrap;
  /* margin-top: 40rpx; */
  font-size: 34rpx;
  color: #232323;
  overflow: hidden;
}

.onlyImg, .onlyVideo{
  position: relative;
  width: 436rpx;
  height: 200rpx;
}
.onlyImg image, .onlyVideo image{
  display:block;
  width: 100%;
  height: 100%;
  object-fit:cover;
  border-radius:4rpx;
  margin-top:0!important;
}
.play :after{
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  width: 16px;
  height: 18px;
  background-image: url(https://ohc5vthqm.qnssl.com/syshu/imgs/sprite.png);
  background-position: 0 -13px;
}
.onlyAudio{
  color: #fff;
  font-size: 30rpx;
}
.body-view .onlyAudio text {
  margin-top: 0;
  vertical-align: middle;
}
.onlyAudio image {
  display: block;
  width: 28rpx;
  height: 30rpx;
  margin-bottom: 6rpx;
  margin-right: 10rpx;
  object-fit: cover;
}
.adiuobg {
  background: #97B927;
}
.adiuobg .personDate .year{
  color: #fff;
}
.adiuobg .personDate .dateBox{
  border-right:2rpx solid #fff;
}
.adiuobg .personEvent .title{
  color: #fff;
}

.descripe {
  color: #aaa;
  font-size: 28rpx;
