.header {
  width: 100%;
  height: 260rpx;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: 50% 50%;
  overflow: hidden;
}

.header-mask{
  width: 100%;
  height: 260rpx;
}
.header-background-image {
  width: 100%;
  height: 100%;
}

.header-content-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100%;
  padding: 0 40rpx;
}

.header-avatar-container {
   display: flex;
   align-items: center;
   color: #fff;
   z-index: 99;
