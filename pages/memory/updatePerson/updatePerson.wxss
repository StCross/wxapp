
.page-form {
  height: 100%;
}

.page {
  height: 100%;
  /*background-color: #ffffff;*/
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}

.page-header {
  padding: 20rpx;
}

.page-body {
  flex: 1;

  display: flex;
  flex-direction: column;
}

.form-cells {
  flex: 1;
  margin-top: 0;
  background-color: #eee;
}
.form-cells::after, .form-cells::before {
  border: 0;
}

.weui-cell::before {
  right: 15px;
}

.required {
  display: inline-block;
  color: red;
}

.uploader-cell {
  padding: 20px 15px;
  margin-bottom: 20rpx;
  border-bottom:1rpx solid #D9D9D9;
}

.uploader-cell__bd {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.weui-uploader{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.avatar-image {
  border-radius: 100%;
}
.weui-uploader__bd{
  margin-bottom: 0;
}
.weui-uploader__file{
  margin-bottom: 0;
}
.weui-uploader__img{
  width: 120rpx;
  height: 120rpx;
}

.weui-uploader__hd{
  padding-bottom: 0;
}
.uploader-title {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

/*.birth-year-select {
  width: 70px;
  border-right: 0;
}*/

.user-cell {
  padding: 10px 15px 0 15px;

  display: flex;
  flex-direction: row;
  align-items: center;
  
  color: gray;
}

.user-cell:nth-child(1) {
  padding-top: 20px;
}

.user-cell-hd{
  margin-right: 20rpx;
}

.user-cell-left-label {
  font-size: 24rpx;
}
.user-cell-avatar{
  display: flex;
  align-items: center;
  width: 54rpx;
  height: 54rpx;
  margin-right: 20rpx;
}
.user-cell-avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 100%;
}

.user-cell-name{
  font-size: 24rpx;
}

.bottom-button {
  margin-top: 30rpx;
}

.bottom-button:first-child {
  margin-top: 0;
}

.weui-select{
  border-right: none;
}
.new_weui-cell{
  padding:0px 15px;
  position:relative;
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  -webkit-box-align:center;
  -webkit-align-items:center;
  align-items:center;
}