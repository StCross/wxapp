
.page-form {
  height: 100%;
}

.page {
  height: 100%;
  background-color: #eee;

  display: flex;
  flex-direction: column;
}

.page-header {
  padding: 20rpx;
}

.page-body {
  flex: 1;

  display: flex;
  flex-direction: column;
}

.form-cells {
  flex: 1;

  margin-top: 0;
  background-color: #eee;
}
.form-cells::after, .form-cells::before {
  border: 0;
}

.weui-cell::before {
  border: 0;
}

.weui-cell::before {
  right: 15px;
}

.uploader-cell {
  margin-bottom: 80rpx;
}

.uploader-cell {
  padding: 0;
}

.uploader-cell__bd {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.avatar-image {
  /*border-radius: 100%;*/
  width: 150px;
}

.avatar-uploader-input-box {
  width: 150px;
}

.weui-uploader {
  flex: 1;
  height: 284rpx;
  position: relative;
}
.weui-uploader__bd {
  flex: 1;
  max-height: 284rpx;
}
.weui-uploader__bd image{
  width: 100%;
  max-height: 284rpx;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto; 
}

.uploader-title {
  position:absolute;
  left:0;
  top:0;
  right:0;
  bottom:0;
  margin:auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  color: #fff;

  background: rgba(0, 0, 0, 0.3);
  font-size: 40rpx;
}

.name-cell::before {
  border: 0;
}

.name-cell::after {
  content:" ";
  position:absolute;
  left: 132rpx;
  bottom:0;
  right: 132rpx;
  height:1px;
  border-bottom:1rpx solid #a3a3a3;
  color:#a3a3a3;
}

.bottom-button {
  margin-top: 30rpx;
}

.bottom-button:first-child {
  margin-top: 0;
}

.weui-uploader__input-box{
  border-radius: 8rpx;
  border: 1rpx dashed #ccc;
}
.weui-cell_input{
  padding: 0 132rpx;
  margin-bottom: 20rpx;
}
.weui-label{
  width: 95px;
  padding-right: 20rpx;
  text-align: right;
}
.weui-cell-border{
  border-bottom: 1rpx solid #A3A2A8;
}

.weui-input{
  height: 72rpx;
  line-height: 72rpx;
  min-height: 72rpx;
}
