.header{
    width: 100%;
    height: 300rpx;
}
.header image{
    width: 100%;
    height: 100%;
}

.helper-button {
    position: absolute;
    right: 20rpx;
    top: 30rpx;
    width: 120rpx;
    height: 60rpx;

    /*background: url('/icon/help.png');*/
}
.helper-button image {
    width: 100%;
    height: 100%;
}

.main{
    padding: 20rpx 20rpx;
    font-size: 28rpx;
}

.tree-list-header {
  font-size: 36rpx;

  padding: 4rpx 0 20rpx 0;

  display: flex;
  flex-direction: row;
}

.tree-list-header::before {
  content:" ";
  position: relative;
  left: 0;
  top: 0;
  width: 8rpx;
  bottom: 0;
  border-left: 8rpx solid #ffb54c;
  color:#D9D9D9;
}

.tree-list-header-text {
  padding-left: 12rpx;
}

.creator {
    height: 284rpx;
    border: 1rpx solid #bbb;
    /*background-color: #fff;*/
     border-radius: 10rpx; 
    background-repeat: no-repeat;
    background-position: 50% 50%;
    background-size: cover;
    margin-bottom: 20rpx; 
    box-shadow:0 0 10rpx 4rpx rgba(0,0,0,.2) 
}
.tree-image-container {
    flex: 5;
}
.tree-image {
    width: 100%;
    height: 100%;
}

.create-person-shadow {
  width: 100%;
  height: 100%;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  display: flex;
  flex-direction:column-reverse;
}

.create-person{
    /*flex: 1;*/
    /*background: rgba(0, 0, 0, 0.6);*/
    /*background: linear-gradient(top, #bbb, 0, #7db9e8 100%);*/
    color: #fff;
    padding: 0 20rpx 10rpx 20rpx;

    display: flex;
    align-items: flex-end;
    justify-content: flex-end;
}
.person{
    flex-grow: 1;
    display: flex;
    align-items: flex-end;
}
.person image{
    width: 80rpx;
    height: 80rpx;
}

.tree-name-text {
  font-size: 40rpx;
}

.create{
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    height: 284rpx;
    /*margin-top: 24rpx;*/
    border: 1rpx dashed  #bbb;
    background-color: #fff;
}
.Img{
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 24rpx;
}
.Img image{
    width: 100%;
    height: 100%;
}