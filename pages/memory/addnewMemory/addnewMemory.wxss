
.page-form {
  height: 100%;
}

.page {
  height: 100%;
  background-color: #eee;

  display: flex;
  flex-direction: column;
}

.page-header {
  padding: 20rpx;
}

.page-body {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.form-cells {
  flex: 1;
}
.form-cells::after, .form-cells::before {
  border: 0;
}

.weui-cell::before {
  right: 15px;
}
.weui-cell{
  margin-bottom: 60rpx;
}

.uploader-cell__bd {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.weui-uploader {
  flex: 1;
  height: 270rpx;
}
.weui-uploader__bd {
  flex: 1;
  height: 100%;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: 50% 50%;
}

.weui-uploader__hd{
  position:absolute;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  width: 100%;
  height: 100%;
  padding-bottom: 0px;
  background-color: rgba(0, 0, 0, 0.2);
}

.uploader-title {
  height: 40rpx;
  color: #000;
  font-size: 32rpx;
  padding: 10rpx 20rpx;
  margin-bottom: 22rpx;
  border-radius: 6rpx;
  background-color: #eee;
}

.name-cell::before {
  border: 0;
}

.bottom-button {
  margin-top: 30rpx;
}

.bottom-button:first-child {
  margin-top: 0;
}

.weui-uploader__input-box{
  border-radius: 8rpx;
  border: 1rpx dashed #ccc;
}
.weui-cell_input{
  padding: 0 140rpx;
  margin-bottom: 20rpx;
}
.weui-label{
  width: 95px;
  padding-right: 20rpx;
  text-align: right;
}
.weui-cell-border{
  border-bottom: 1rpx solid #A3A2A8;
}
.weui-input{
  height: 72rpx;
  line-height: 72rpx;
  min-height: 72rpx;
  text-align: left;
  margin: 0;
  padding: 0;
}
.picker{
  width:500rpx;
  height:100rpx;
  background:#fff;
}