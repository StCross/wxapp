
.page-form {
  height: 100%;
}

.page {
  height: 100%;
  /*background-color: #ffffff;*/

  display: flex;
  flex-direction: column;
}

.page-header {
  padding: 20rpx;
}

.page-body {
  flex: 1;

  display: flex;
  flex-direction: column;
}

.form-cells {
  flex: 1;
  margin-top: 20rpx;
  background-color: #eee;
}
.form-cells::after, .form-cells::before {
  border: 0;
}

.weui-cell::before {
  right: 15px;
}

.required {
  display: inline-block;
  color: red;
}

.uploader-cell {
  margin-bottom: 20rpx;
  padding: 20px 15px;
  border-bottom: 1rpx solid #D9D9D9;
  /*padding: 60rpx 30rpx 80rpx 30rpx;*/
}

.uploader-cell__bd {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.avatar-image {
  border-radius: 100%;
}

.uploader-title {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.bottom-button {
  margin-top: 30rpx;
}

.bottom-button:first-child {
  margin-top: 0;
}

.weui-uploader{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content:space-between;
}
.weui-uploader__bd{
  margin-bottom: 0;
}
.weui-uploader__input-box{
  float:left;
  position:relative;
  margin-right:9px;
  margin-bottom:0px;
  width:120rpx;
  height:120rpx;
  border:1rpx solid #D9D9D9;
  border-radius: 100%;
}
.weui-uploader__file {
  margin-bottom:0px;
}
.weui-uploader__img{
  width:120rpx;
  height:120rpx;
}
.page__desc{
  margin-top: 0;
}
.new_weui-cell{
  padding:0px 15px;
  position:relative;
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  -webkit-box-align:center;
  -webkit-align-items:center;
  align-items:center;
}